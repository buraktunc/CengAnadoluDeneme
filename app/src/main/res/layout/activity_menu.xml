<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimage1"

    android:weightSum="1">
    <TableLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backimage1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp">

        <TableRow>
            <ImageButton
                android:paddingTop="30dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:id="@+id/coursesButton"
                android:background="@android:color/transparent"
                android:src="@drawable/coursesicon1"/>

            <ImageButton
                android:paddingTop="30dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:id="@+id/departmentButton"
                android:background="@android:color/transparent"
                android:src="@drawable/departmenticon" />
        </TableRow>

        <TableRow>
            <ImageButton
                android:paddingTop="50dp"
                android:paddingLeft="5dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:id="@+id/forumButton"
                android:background="@android:color/transparent"
                android:src="@drawable/forumicon1"/>

            <ImageButton
                android:paddingTop="50dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:id="@+id/extrasButton"
                android:background="@android:color/transparent"
                android:src="@drawable/extrasicon"
                android:paddingRight="10dp"
                />

        </TableRow>

        <TableRow>

            <ImageButton
                android:paddingTop="50dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:id="@+id/aboutButton"
                android:background="@android:color/transparent"
                android:src="@drawable/abouticon"/>

            <ImageButton
                android:paddingTop="50dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:id="@+id/contactsButton"
                android:background="@android:color/transparent"
                android:src="@drawable/contactsicon" />
        </TableRow>

    </TableLayout>
</RelativeLayout>